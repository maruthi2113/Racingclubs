@using Runner.Models.ViewModels
@model IEnumerable<Club>
@{
    ViewData["Title"] = "Home Page";
}

<div class="album py-5 bg-dark">
    <div class="container">
        <div class="row ">
            @foreach (var club in Model)
            {
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <img class="card-img-top" src="@club.Image" width="100%" height="225" alt="Card image cap" />
                        <div class="card-body">
                            <p class="card-text">@club.Name</p>
                            <p class="card-text">@club.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="Club" asp-action="Detail" asp-route-id="@club.Id">View</a>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a type="button" class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@club.Id">Edit</a>
                                        <a type="button" class="btn btn-sn btn-outline-danger" asp-action="Delete" asp-route-id="@club.Id">Delete</a>
                                    }
                                </div>
                                <small class="text-muted">@club.ClubCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
