@model Club

<div class="album py-5 bg-primary">
    <div class="container">
        <div class="row ">
            
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <img class="card-img-top" src="@Model.Image" width="100%" height="225" alt="Card image cap" />
                        <div class="card-body">
                            <p class="card-text">@Model.Name</p>
                            <p class="card-text">@Model.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="button" class="btn btn-sm btn-outline-secondary" asp-action="Detail" asp-route-id="@Model.Id">View</a>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a type="button" class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                                        <a type="button" class="btn btn-sn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                                    }
                                </div>
                                <small class="text-muted">@Model.ClubCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
         
        </div>
    </div>
</div>
